{
  "name": "@enzymefinance/api",
  "version": "0.0.8",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/enzymefinance/enzyme-sdk.git",
    "directory": "packages/api"
  },
  "scripts": {
    "codegen": "buf generate buf.build/avantgardefinance/enzyme",
    "clean": "rm -rf dist",
    "build": "pnpm run clean && pnpm run build:cjs && pnpm run build:esm+types",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --verbatimModuleSyntax false --outDir ./dist/cjs && echo > ./dist/cjs/package.json '{\"type\":\"commonjs\"}'",
    "build:esm+types": "tsc --project tsconfig.build.json --module es2015 --outDir ./dist/esm --declaration --declarationMap --declarationDir ./dist/types && echo > ./dist/esm/package.json '{\"type\":\"module\"}'",
    "release": "pnpm build && ../../scripts/prerelease.sh ./package.json",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/**",
    "!dist/**/*.tsbuildinfo",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "typings": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@bufbuild/connect": "^0.8.5",
    "@bufbuild/protobuf": "^1.2.0"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.15.0",
    "@bufbuild/protoc-gen-connect-es": "^0.8.5",
    "@bufbuild/protoc-gen-es": "^1.2.0",
    "@types/node": "^18.15.11",
    "@types/web": "^0.0.99",
    "@vitest/coverage-c8": "^0.29.2",
    "@vitest/ui": "^0.29.2",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  }
}
