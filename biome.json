{
  "vcs": {
    "useIgnoreFile": true
  },
  "files": {
    "ignore": [
      ".direnv",
      "dist",
      "build",
      "generated",
      "coverage",
      "pnpm-lock.yaml",
      "tsconfig.json",
      "tsconfig.*.json"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "all": true,
      "performance": {
        "noReExportAll": "off",
        "noBarrelFile": "off"
      },
      "suspicious": {
        "noEmptyBlockStatements": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "useFilenamingConvention": "off",
        "noDefaultExport": "off",
        "noParameterProperties": "off",
        "noNamespaceImport": "off",
        "useNamingConvention": "off",
        "useShorthandArrayType": "off",
        "useConsistentArrayType": {
          "options": {
            "syntax": "generic"
          }
        }
      },
      "nursery": {
        "useImportRestrictions": "off"
      },
      "correctness": {
        "noNodejsModules": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noBannedTypes": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
