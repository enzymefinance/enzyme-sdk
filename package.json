{
  "private": true,
  "packageManager": "pnpm@7.30.0",
  "scripts": {
    "api:node": "pnpm run --recursive --filter example-api-node start",
    "api:web": "pnpm run --recursive --filter example-api-web start",
    "start": "pnpm run start:web",
    "codegen": "pnpm run --recursive codegen",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive --parallel test",
    "test:coverage": "pnpm run --recursive --parallel test:coverage",
    "clean": "pnpm run --recursive --parallel clean",
    "typecheck": "pnpm run --recursive --parallel typecheck",
    "format": "rome format --write .",
    "lint": "rome check ."
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "rome": "^12.0.0",
    "typescript": "^5.0.3"
  }
}
