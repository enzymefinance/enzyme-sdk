{
  "include": [],
  "compilerOptions": {
    // Incremental builds
    "incremental": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,

    // Modules
    "module": "ES6",
    "moduleResolution": "Node",

    // JavaScript support
    "allowJs": false,
    "checkJs": false,

    // Emit
    "removeComments": false,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,

    // Interop constraints
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,

    // Language and environment
    "lib": ["ES2021", "DOM"],
    "target": "ES2021",

    // Project references
    "composite": true,

    // Path aliasing
    "baseUrl": ".",
    "paths": {
      "@enzymefinance/sdk": ["./packages/sdk/src/index.js"],
      "@enzymefinance/sdk/*": ["./packages/sdk/src/*.js"],
      "@enzymefinance/abis": ["./packages/abis/src/index.js"],
      "@enzymefinance/abis/*": ["./packages/abis/src/abis/*.js"],
      "@enzymefinance/api": ["./packages/api/src/index.js"],
      "@enzymefinance/api/*": ["./packages/api/src/*.js"]
    }
  }
}
